<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111" fx:controller="application.ObservableArrayController">
   <center>
      <ListView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <AnchorPane prefHeight="145.0" prefWidth="323.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="nameTextField" layoutX="24.0" layoutY="14.0" />
            <TextField fx:id="surnameTextField" layoutX="24.0" layoutY="54.0" />
            <Button fx:id="addButton" layoutX="21.0" layoutY="101.0" mnemonicParsing="false" onAction="#addPerson" text="add" />
            <Button fx:id="removeButton" layoutX="113.0" layoutY="101.0" mnemonicParsing="false" onAction="#deletePerson" text="remove" />
            <ComboBox fx:id="comboBox" layoutX="173.0" layoutY="14.0" prefWidth="150.0" />
         </children>
      </AnchorPane>
   </top>
   <bottom>
      <ListView fx:id="listView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
